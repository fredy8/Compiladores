class BankAccount {
  int balance;
  function void init() {
    balance = 0;
    return;
  }
  function void deposit(int money) {
    balance = balance + money;
    return;
  }
  function bool withdraw(int money) {
    if (money <= balance) {
      balance = balance - money;
      return true;
    } else {
      return false;
    }
  }
  function int getBalance() {
    return balance;
  }
}

class Work {
  int payPerHour;
  function void init() {
    payPerHour = 4;
    return;
  }
  function int work(int hours) {
    return payPerHour*hours;
  }
}

class Person {
  BankAccount bankAccount;
  Work work;
  bool hasCar;
  function void init() {
    bankAccount.init();
    work.init();
    hasCar = false;
    return;
  }
  function void work() {
    int m;
    m = (work.work(8));
    bankAccount.deposit(m);
    return;
  }
  function void giveCar() {
    hasCar = true;
    return;
  }
  function bool hasCar() {
    return hasCar;
  }
  function bool pay(int p) {
    bool b;
    return (bankAccount.withdraw(p));
  }
  function int getMoney() {
    return bankAccount.getBalance();
  }
}

